.navigator-hover {

}

/*topic*/
.topic-list {
  display:flex;
  flex-direction: column;
  width: 100%;
}
.topic-list .item-content {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  min-height: 160rpx;
}
.topic-list .item-content::after {
  content: "";
  position: absolute;
  bottom: 0;
  display: block;
  width: 100%;
  height: 2rpx;
  background: #f8f8f8;

}
.item-content .item-media {
}
.item-media image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 30rpx;
}
.item-content .item-inner {
  box-sizing: border-box;
  width: 100%;
  padding-left: 140rpx;
  padding-right: 40rpx;
  margin-left: -140rpx;
  align-items: center;
}
.item-inner .item-title-row {
  display: flex;
  justify-content: space-between;
  color: #7f7f7f;
  font-size: 28rpx;
}
.item-inner .item-title {
  max-width: 100%;
  line-height: 2;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
