/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #000;
}

/*.flex*/
.flex-wrp{
  height: 100px;
  display:flex;
  background-color: #FFFFFF;
}
.flex-item{
  width: 100px;
  height: 100px;
  color: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ui-color-green {
  color: #e74c3c;
}
.ui-color-red {
  color: #e74c3c;
}
.ui-pl20 {
  padding-right: 20rpx;
}
.ui-left {
  text-align: left;
}
.ui-right {
  text-align: right;
}
.ui-center {
  text-align: center;
}
/*nodata*/
.nodata::after {
  content: "暂无数据";
  font-size: 28rpx;
  color: #999;
  line-height: 112rpx;
}
